            "children": [
              {
                "detail": 0,
                "format": 0,
                "mode": "normal",
                "style": "",
                "text": "the firms",
                "type": "text",
                "version": 1
              }
            ],
            "direction": "ltr",
            "format": "",
            "indent": 0,
            "type": "link",
            "rel": null,
            "target": null,
            "title": null,
            "url": "https://www.washingtonpost.com/politics/2021/01/15/finance-202-public-pensions-pressure-wall-street-fund-managers-supporting-gop-insurrectionists/",
            "version": 1
