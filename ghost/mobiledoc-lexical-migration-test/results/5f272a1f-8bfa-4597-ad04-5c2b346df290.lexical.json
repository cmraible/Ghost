            "url": "__GHOST_URL__/articles/features-3/motorcycle-chariot-races/",
            "version": 1
          },
          {
            "detail": 0,
            "format": 0,
            "mode": "normal",
            "style": "",
            "text": ", 30s, 40s, or ",
            "type": "text",
            "version": 1
          },
          {
            "children": [
              {
                "detail": 0,
                "format": 0,
                "mode": "normal",
                "style": "",
                "text": "whatever era",
                "type": "text",
                "version": 1
              }
            ],
            "direction": "ltr",
