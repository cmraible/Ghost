            "version": 1
          },
          {
            "detail": 0,
            "format": 1,
            "mode": "normal",
            "style": "",
            "text": "The Daily Poster",
            "type": "text",
            "version": 1
          },
          {
            "detail": 0,
            "format": 3,
            "mode": "normal",
            "style": "",
            "text": "'s work.",
            "type": "text",
            "version": 1
          }
        ],
