        "html": "<iframe src=\"https://player.vimeo.com/video/327671914?app_id=122963\" width=\"360\" height=\"360\" frameborder=\"0\" title=\"Beach Clean\" allow=\"autoplay; fullscreen\" allowfullscreen></iframe>",
        "embedType": "video"
