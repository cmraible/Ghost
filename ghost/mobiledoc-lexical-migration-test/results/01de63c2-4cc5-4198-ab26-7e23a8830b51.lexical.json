          {
            "detail": 0,
            "format": 0,
            "mode": "normal",
            "style": "",
            "text": "Production of the ",
            "type": "text",
            "version": 1
          },
          {
            "children": [
              {
                "detail": 0,
                "format": 0,
                "mode": "normal",
                "style": "",
                "text": "2020 Chevrolet Corvette",
                "type": "text",
                "version": 1
              }
            ],
            "direction": "ltr",
