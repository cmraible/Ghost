        "metadata": {
          "title": "Pokémon Brilliant Diamond and Pokémon Shining Pearl - Overview Trailer - Nintendo Switch",
          "author_name": "Nintendo",
          "author_url": "https://www.youtube.com/c/nintendo",
          "height": 113,
          "width": 200,
          "version": "1.0",
