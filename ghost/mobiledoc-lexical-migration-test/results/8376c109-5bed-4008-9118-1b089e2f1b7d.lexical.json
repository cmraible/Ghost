        "html": "<iframe width=\"200\" height=\"113\" src=\"https://www.youtube.com/embed/o5BBAqhjiQ4?feature=oembed\" frameborder=\"0\" allow=\"accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture\" allowfullscreen></iframe>",
        "metadata": {
          "title": "Lone McLonegan, a western adventure",
          "author_name": "Flynn's Arcade",
          "author_url": "https://www.youtube.com/user/jpd92363",
          "height": 113,
          "width": 200,
          "version": "1.0",
