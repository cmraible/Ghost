        "children": [
          {
            "detail": 0,
            "format": 1,
            "mode": "normal",
            "style": "",
            "text": "Check out some amazing 1930s barn finds ",
            "type": "text",
            "version": 1
          },
          {
            "children": [
              {
                "detail": 0,
