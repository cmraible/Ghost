            "version": 1
          },
          {
            "children": [
              {
                "children": [
                  {
                    "detail": 0,
                    "format": 0,
                    "mode": "normal",
                    "style": "",
                    "text": "The Volkswagen Golf Turns 45 Years-Old",
                    "type": "text",
                    "version": 1
                  }
                ],
                "direction": "ltr",
                "format": "",
                "indent": 0,
                "type": "link",
                "rel": null,
                "target": null,
                "title": null,
                "url": "__GHOST_URL__/articles/highlights/the-volkswagen-golf-turns-45-years-old/",
                "version": 1
