            "children": [
              {
                "detail": 0,
                "format": 1,
                "mode": "normal",
                "style": "",
                "text": "I’m One Of The Service Workers Who Left The Restaurant Industry During The Pandemic. Serve Yourself.",
                "type": "text",
                "version": 1
