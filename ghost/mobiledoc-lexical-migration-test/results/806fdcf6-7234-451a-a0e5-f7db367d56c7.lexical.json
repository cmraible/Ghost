            "version": 1
          },
          {
            "detail": 0,
            "format": 0,
            "mode": "normal",
            "style": "",
            "text": "Sludge",
            "type": "text",
            "version": 1
          },
          {
            "detail": 0,
            "format": 2,
            "mode": "normal",
            "style": "",
            "text": ", this would require at least 15 members of the House to resign from board positions. (Senators are already banned from sitting on corporate boards while in office.)",
            "type": "text",
            "version": 1
          }
        ],
