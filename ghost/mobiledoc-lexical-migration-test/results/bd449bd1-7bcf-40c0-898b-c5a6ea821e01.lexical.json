          {
            "detail": 0,
            "format": 0,
            "mode": "normal",
            "style": "",
            "text": "Relief doesn’t seem to be coming anytime soon…",
            "type": "text",
            "version": 1
          }
        ],
        "direction": "ltr",
        "format": "",
        "indent": 0,
        "type": "heading",
