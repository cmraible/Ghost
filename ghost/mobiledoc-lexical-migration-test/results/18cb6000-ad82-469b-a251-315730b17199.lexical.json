          {
            "detail": 0,
            "format": 0,
            "mode": "normal",
            "style": "",
            "text": " and they’re going to great lengths to get them. Sure, ",
            "type": "text",
            "version": 1
          },
          {
            "children": [
              {
                "detail": 0,
                "format": 0,
                "mode": "normal",
                "style": "",
                "text": "locking your doors",
                "type": "text",
                "version": 1
              }
            ],
            "direction": "ltr",
            "format": "",
            "indent": 0,
            "type": "link",
            "rel": null,
            "target": null,
