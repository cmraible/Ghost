          {
            "detail": 0,
            "format": 0,
            "mode": "normal",
            "style": "",
            "text": "It’s not an overstatement to say the ",
            "type": "text",
            "version": 1
          },
          {
            "children": [
              {
                "detail": 0,
                "format": 0,
                "mode": "normal",
                "style": "",
                "text": "Ferrari F40",
                "type": "text",
                "version": 1
              }
            ],
            "direction": "ltr",
            "format": "",
            "indent": 0,
            "type": "link",
