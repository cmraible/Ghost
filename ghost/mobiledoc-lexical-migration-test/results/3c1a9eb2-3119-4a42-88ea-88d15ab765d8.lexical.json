          {
            "detail": 0,
            "format": 0,
            "mode": "normal",
            "style": "",
            "text": "It's a worst case scenario for many ",
            "type": "text",
            "version": 1
          },
          {
            "children": [
              {
                "detail": 0,
                "format": 0,
                "mode": "normal",
