          {
            "detail": 0,
            "format": 0,
            "mode": "normal",
            "style": "",
            "text": "Yes, it’s set ridiculously low at $500, but it’s a little more flexible than you might think.",
            "type": "text",
            "version": 1
          }
        ],
        "direction": "ltr",
        "format": "",
        "indent": 0,
        "type": "koenig-heading",
