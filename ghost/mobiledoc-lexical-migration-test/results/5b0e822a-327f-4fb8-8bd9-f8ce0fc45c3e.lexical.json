          {
            "detail": 0,
            "format": 0,
            "mode": "normal",
            "style": "",
            "text": "At least they didn’t get away with it…",
            "type": "text",
            "version": 1
          }
        ],
        "direction": "ltr",
        "format": "",
        "indent": 0,
        "type": "heading",
