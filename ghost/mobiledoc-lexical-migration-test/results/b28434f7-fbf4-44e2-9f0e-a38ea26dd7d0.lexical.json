          {
            "detail": 0,
            "format": 0,
            "mode": "normal",
            "style": "",
            "text": "Chrysler PT Cruiser Mania: Could It Happen Today?",
            "type": "text",
            "version": 1
          }
        ],
        "direction": "ltr",
        "format": "",
        "indent": 0,
        "type": "koenig-heading",
