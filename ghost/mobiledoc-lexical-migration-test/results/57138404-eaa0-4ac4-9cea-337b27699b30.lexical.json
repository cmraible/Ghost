          {
            "detail": 0,
            "format": 0,
            "mode": "normal",
            "style": "",
            "text": "Finally, some good news about this car.",
            "type": "text",
            "version": 1
          }
        ],
        "direction": "ltr",
        "format": "",
        "indent": 0,
        "type": "heading",
