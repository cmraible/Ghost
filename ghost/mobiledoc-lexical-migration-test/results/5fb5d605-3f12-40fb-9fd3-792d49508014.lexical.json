            "style": "",
            "text": " versus ",
            "type": "text",
            "version": 1
          },
          {
            "children": [
              {
                "detail": 0,
                "format": 0,
                "mode": "normal",
                "style": "",
                "text": "pleasure car",
                "type": "text",
                "version": 1
              }
            ],
            "direction": "ltr",
