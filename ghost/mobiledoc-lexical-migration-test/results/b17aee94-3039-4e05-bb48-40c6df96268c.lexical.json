          {
            "detail": 0,
            "format": 0,
            "mode": "normal",
            "style": "",
            "text": "And there’s a good reason for that…",
            "type": "text",
            "version": 1
          }
        ],
        "direction": "ltr",
        "format": "",
        "indent": 0,
        "type": "koenig-heading",
