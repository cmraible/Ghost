          {
            "detail": 0,
            "format": 2,
            "mode": "normal",
            "style": "",
            "text": "likely",
            "type": "text",
            "version": 1
          },
          {
            "detail": 0,
            "format": 0,
            "mode": "normal",
            "style": "",
            "text": " outcome of the current disruption: a small number of very large outlets doing mainstream news (this is the ",
            "type": "text",
            "version": 1
          },
          {
            "children": [
              {
                "detail": 0,
                "format": 0,
                "mode": "normal",
                "style": "",
                "text": "\"winner takes all\" part of the subscriptions",
                "type": "text",
                "version": 1
              }
