          {
            "detail": 0,
            "format": 0,
            "mode": "normal",
            "style": "",
            "text": " that schools ",
            "type": "text",
            "version": 1
          },
          {
            "children": [
              {
                "detail": 0,
                "format": 0,
                "mode": "normal",
                "style": "",
                "text": "ignore health warnings",
                "type": "text",
                "version": 1
              }
            ],
            "direction": "ltr",
            "format": "",
