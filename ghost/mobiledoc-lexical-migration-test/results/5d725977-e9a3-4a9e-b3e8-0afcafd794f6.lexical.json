            "version": 1
          },
          {
            "children": [
              {
                "detail": 0,
                "format": 0,
                "mode": "normal",
                "style": "",
                "text": "$2-million-a-year pay package",
                "type": "text",
                "version": 1
              }
            ],
            "direction": "ltr",
