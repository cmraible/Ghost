            "version": 1
          },
          {
            "detail": 0,
            "format": 3,
            "mode": "normal",
            "style": "",
            "text": " and ",
            "type": "text",
            "version": 1
          },
          {
            "children": [
              {
                "detail": 0,
                "format": 3,
                "mode": "normal",
                "style": "",
                "text": "follow us on Twitter",
                "type": "text",
                "version": 1
              }
            ],
