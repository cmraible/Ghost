                "children": [
                  {
                    "detail": 0,
                    "format": 0,
                    "mode": "normal",
                    "style": "",
                    "text": "Why You Want A 1990s Mercedes 600 SEL In Your Life",
                    "type": "text",
                    "version": 1
                  }
                ],
                "direction": "ltr",
                "format": "",
                "indent": 0,
                "type": "link",
                "rel": null,
                "target": null,
                "title": null,
                "url": "__GHOST_URL__/articles/highlights/306296/mercedes-600-sel-saloon/",
