          {
            "detail": 0,
            "format": 1,
            "mode": "normal",
            "style": "",
            "text": "NUTS AND BOLTS: ",
            "type": "text",
            "version": 1
          },
          {
            "detail": 0,
            "format": 0,
            "mode": "normal",
            "style": "",
            "text": "The latest IPCC document is part of the panel’s sixth such climate assessment, compiled by more than 700 voluntary authors who are mostly scientists and researchers. An additional summary for policymakers is reviewed (and edited) by government delegations; this year’s review process was the ",
            "type": "text",
            "version": 1
          },
          {
            "children": [
              {
                "detail": 0,
                "format": 0,
                "mode": "normal",
                "style": "",
                "text": "longest in IPCC history.",
                "type": "text",
                "version": 1
              }
            ],
            "direction": "ltr",
            "format": "",
            "indent": 0,
            "type": "link",
            "rel": null,
            "target": null,
            "title": null,
            "url": "https://twitter.com/JPvanYpersele/status/1510709441259319302",
            "version": 1
          },
          {
            "detail": 0,
            "format": 0,
            "mode": "normal",
            "style": "",
            "text": " ",
            "type": "text",
            "version": 1
          },
          {
            "detail": 0,
            "format": 2,
            "mode": "normal",
            "style": "",
            "text": "Carbon Brief",
            "type": "text",
            "version": 1
          },
          {
            "detail": 0,
            "format": 0,
            "mode": "normal",
