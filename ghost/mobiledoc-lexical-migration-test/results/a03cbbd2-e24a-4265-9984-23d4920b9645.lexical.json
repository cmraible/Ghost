          {
            "detail": 0,
            "format": 0,
            "mode": "normal",
            "style": "",
            "text": "Actually, it’s a little more complicated than that…",
            "type": "text",
            "version": 1
          }
        ],
        "direction": "ltr",
        "format": "",
        "indent": 0,
        "type": "heading",
