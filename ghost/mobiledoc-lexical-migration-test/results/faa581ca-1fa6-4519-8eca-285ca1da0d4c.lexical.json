        "metadata": {
          "title": "Mario + Rabbids Sparks of Hope - Game Introduction Trailer",
          "author_name": "Ubisoft",
          "author_url": "https://www.youtube.com/c/Ubisoft",
          "height": 113,
          "width": 200,
          "version": "1.0",
