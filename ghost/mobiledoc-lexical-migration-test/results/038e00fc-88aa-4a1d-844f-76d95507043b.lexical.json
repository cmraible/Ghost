        "children": [
          {
            "detail": 0,
            "format": 2,
            "mode": "normal",
            "style": "",
            "text": "Check out an old truck converted into a racing boat ",
            "type": "text",
            "version": 1
          },
          {
            "children": [
              {
                "detail": 0,
