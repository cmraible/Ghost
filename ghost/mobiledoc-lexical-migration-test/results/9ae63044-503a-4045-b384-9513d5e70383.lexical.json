          {
            "detail": 0,
            "format": 0,
            "mode": "normal",
            "style": "",
            "text": "Is America next?",
            "type": "text",
            "version": 1
          }
        ],
        "direction": "ltr",
        "format": "",
        "indent": 0,
        "type": "koenig-heading",
        "tag": "h2",
        "version": 1,
        "renderVersion": "4.0"
