        "html": "<iframe width=\"356\" height=\"200\" src=\"https://www.youtube.com/embed/fMeoXtQSd1I?feature=oembed\" frameborder=\"0\" allow=\"accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture\" allowfullscreen></iframe>",
        "metadata": {
          "title": "WRITHE Nintendo Switch announcement trailer (OFFICIAL)",
          "author_name": "Mission Ctrl Studios",
          "author_url": "https://www.youtube.com/channel/UCz54qYCZ5XAQadprdOOe70A",
          "height": 200,
          "width": 356,
          "version": "1.0",
