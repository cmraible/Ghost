          {
            "detail": 0,
            "format": 0,
            "mode": "normal",
            "style": "",
            "text": "It’s a tragedy every motorsports fan should remember.",
            "type": "text",
            "version": 1
          }
        ],
        "direction": "ltr",
        "format": "",
        "indent": 0,
        "type": "heading",
