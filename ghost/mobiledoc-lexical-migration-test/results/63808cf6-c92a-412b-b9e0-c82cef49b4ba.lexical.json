      {
        "type": "image",
        "src": "__GHOST_URL__/content/images/2019/03/IMG_0345.jpg",
        "cardWidth": "wide"
      },
      {
        "children": [
          {
            "children": [
              {
                "detail": 0,
                "format": 2,
                "mode": "normal",
                "style": "",
                "text": "Nice Matin",
                "type": "text",
                "version": 1
              }
            ],
            "direction": "ltr",
            "format": "",
            "indent": 0,
            "type": "link",
            "rel": null,
