          {
            "detail": 0,
            "format": 0,
            "mode": "normal",
            "style": "",
            "text": "Adams Motor Company in Lynchburg, Virginia ",
            "type": "text",
            "version": 1
          },
          {
            "children": [
              {
                "detail": 0,
                "format": 0,
                "mode": "normal",
                "style": "",
                "text": "fell victim to rioting",
                "type": "text",
                "version": 1
              }
            ],
            "direction": "ltr",
