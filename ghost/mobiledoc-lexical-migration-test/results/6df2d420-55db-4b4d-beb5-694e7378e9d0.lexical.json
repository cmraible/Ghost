          {
            "detail": 0,
            "format": 0,
            "mode": "normal",
            "style": "",
            "text": "There’s something to be learned from his tragedy…",
            "type": "text",
            "version": 1
          }
        ],
        "direction": "ltr",
        "format": "",
        "indent": 0,
        "type": "heading",
