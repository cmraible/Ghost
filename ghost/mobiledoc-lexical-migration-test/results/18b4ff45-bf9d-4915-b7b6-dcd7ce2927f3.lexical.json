            "version": 1
          },
          {
            "children": [
              {
                "detail": 0,
                "format": 0,
                "mode": "normal",
                "style": "",
                "text": "where student debtors",
                "type": "text",
                "version": 1
              }
            ],
            "direction": "ltr",
