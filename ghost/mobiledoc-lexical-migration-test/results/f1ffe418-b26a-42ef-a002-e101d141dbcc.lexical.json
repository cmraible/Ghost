                    "mode": "normal",
                    "style": "",
                    "text": "Teen Vogue",
                    "type": "text",
                    "version": 1
                  }
                ],
                "direction": "ltr",
                "format": "",
                "indent": 0,
                "type": "link",
                "rel": null,
